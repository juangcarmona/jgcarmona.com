---
interface Props {
  date?: Date | string;
}

const { date } = Astro.props;

if (!date) {
  return null;
}

const d = date instanceof Date ? date : new Date(date);
---

<time datetime={d.toISOString()}>
	{
		d.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
